{
  "info": {
    "name": "Java17 Services Final v4 Full",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "OrgApp - List Depts",
      "request": {
        "method": "GET",
        "url": "{{ORGAPP_URL}}/departments"
      }
    },
    {
      "name": "OrgApp - Create Dept",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Engineering\" }"
        },
        "url": "{{ORGAPP_URL}}/departments"
      }
    },
    {
      "name": "File Upload - Upload",
      "request": {
        "method": "POST",
        "body": {
          "mode": "formdata",
          "formdata": [
            {
              "key": "file",
              "type": "file"
            }
          ]
        },
        "url": "{{FILEUPLOAD_URL}}/upload"
      }
    },
    {
      "name": "Orders - Publish",
      "request": {
        "method": "POST",
        "body": {
          "mode": "raw",
          "raw": "{ \"item\": \"book\", \"qty\": 2 }"
        },
        "url": "{{ORDERS_URL}}/orders"
      }
    },
    {
      "name": "Orders - PubSub Events",
      "request": {
        "method": "GET",
        "url": "{{ORDERS_URL}}/pubsub-events"
      }
    }
  ]
}